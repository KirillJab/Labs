//---------------------------------------------------------------------------

#pragma hdrstop

#include "Cargo.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)

Cargo::Cargo (int a, int b, int c, int d, System::Uitypes::TColor color) : CRect(a, b, c, d, color)
{
	this->dist = a;
}

void Cargo::moveto (int a, int b, int c, int d)
{
	if(x1 + a > dist)
	{
		x1 += a;
	}
	else
	{
		x1 = 0;
		x2 -= c;
	}
	if(y1 + b > 0)
	{
		y1 += b;
	}
	else
	{
		y1 = 0;
		y2 -= d;
	}
	if(x2 + c < 900 - dist)
	{
		x2 += c;
	}
	else
	{
		x2 = 900;
		x1 -= a;
	}
	if(y2 + d < 500)
	{
		y2+=d;
	}
	else
	{
		y2=500;
		y1 -= b;
	}
}


