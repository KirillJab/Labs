//---------------------------------------------------------------------------

#pragma hdrstop

#include "Rectangle.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)

ÑRectangle::Rec (int x1, int y1, int x2, int y2)
{
	this->x1 = x1;
	this->y1 = y1;
	this->x2 = x2;
	this->y2 = y2;
}

void ÑRectangle::hide (TCanvas* Canvas)
{
	Canvas->Pen->Color = clWhite;
	Canvas->Brush->Color = clWhite;
	Canvas->Rectangle(x1, y1, x2, y2);
}

void ÑRectangle::show (TCanvas* Canvas)
{
	Canvas->Pen->Color = clWhite;
	Canvas->Brush->Color = clWhite;
	Canvas->Rectangle(x1, y1, x2, y2);
}

void ÑRectangle::move (TCanvas* Canvas, int x1, int y1, int x2, int y2)
{
	hide(Canvas);
	x1+=x1;
	y1+=y1;
	x2+=x2;
	y2+=y2;
}

