//---------------------------------------------------------------------------
#include <vcl.h>
#ifndef CRectH
#define CRectH
//---------------------------------------------------------------------------

class CRect
{
	int x1, y1, x2, y2;
    System::Uitypes::TColor color;
	public:
	CRect(int, int, int, int, System::Uitypes::TColor);
	void hide(TCanvas*);
    void moveto(TCanvas*, int, int, int, int);
	virtual void show(TCanvas*);
	virtual void move(TCanvas*, int, int, int, int);
};
#endif
