//---------------------------------------------------------------------------

#pragma hdrstop

#include "Tool.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)

Tool FromString(string inp)
{
	Tool tool;
	string buff;
	int i = 0;


	tool.Available = 0;
	tool.Sold = 0;

	for(; inp[i] != '\t'; i++)
	{
		tool.GroupName += inp[i];
	}
	i++;
	for(; inp[i] != '\t'; i++)
	{
		tool.Name += inp[i];
	}
	i++;
	buff = "";
	for(; inp[i] != '\t'; i++)
	{
		tool.Available *= 10;
		tool.Available += inp[i] - '0';
	}
	i++;
	for(; inp[i] != '\t'; i++)
	{
		tool.Sold *= 10;
		tool.Sold += inp[i] - '0';
	}
	i++;
	for(; inp[i] != '\t'; i++)
	{
		tool.Color += inp[i];
	}
	i++;
	for(; inp[i] != '\0'; i++)
	{
		buff += inp[i];
	}
	if(buff == "Yes")
	{
		tool.Delivery = true;
	}
	else
	{
		tool.Delivery = false;
    }
	i++;
	return tool;
}


