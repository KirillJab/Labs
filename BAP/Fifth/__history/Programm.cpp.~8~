

#include <vcl.h>
#pragma hdrstop

#include "Programm.h"
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
struct Line
{
	Line* prev;
	Line* next;
	string text;
}Line;

struct List
{
	 struct Line* head;
	 struct Line* tail;
}List;

struct List createList(char text[])
{
	struct List list;
	list.head = NULL;
	list.tail = NULL;
	return list;
}

void addToList(struct List *list, struct Line *line)
{
	line->prev = list->tail;
	list->tail = line;
}

__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
	struct Line line1, line2, line3;
	struct List list;
	line1.text = "Hello";
	line1.text = "World";
	line1.text = "HEY!!!";
	addToList(&list, &line1);
	addToList(&list, &line1);
	addToList(&list, &line1);
}

