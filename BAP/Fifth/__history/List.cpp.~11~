//---------------------------------------------------------------------------

#pragma hdrstop

#include "List.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)

Line* List::get(int j)
{
	Line *line = this->Head;
	if(j > this->Size - 1)
	{
		throw;
	}
	else
	{
		for (int i = 0; i < j; i++)
		{
			line = line->Next;
		}
	}
	return line;
}

void clearLine(Line *line)
{
	if (line == NULL)
	{
		return;
    }
	clearLine(line->Next);
	delete(line);
}


void List::Clear()
{
	if (this == NULL || this->Size == 0)
	{
		return;
	}
	clearLine(this->Head->Next);
	delete(this->Head);
	this->Size = 0;
}
